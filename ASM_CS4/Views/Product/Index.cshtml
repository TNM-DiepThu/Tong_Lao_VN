@model IEnumerable<ASM_CS4.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table-bordered">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Tên
            </th>
            <th>
                Gía
            </th>
            <th>
                Số lượng
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
           
            
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                Thể loại
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int stt = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @stt
                </td>
                <td>
                    <img src="~/imgsp/@item.UrlImage" alt="Image" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                
               
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categories.name)
                </td>
                <td>
                    @if (item.Status == 0)
                    {
                        <text>Hoạt động</text>
                    }
                    else if (item.Status == 1)
                    {
                        <text>Không hoạt động</text>
                    }
                    else
                    {
                        <text>Trạng thái không xác định</text>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>
